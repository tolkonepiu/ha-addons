{
  "extends": ["config:base"],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": false
    }
  ],
  "regexManagers": [
    {
      "description": "Update build image versions",
      "fileMatch": [
        "^(\\w)+\\/build\\.yaml$"
      ],
      "matchStrings": [
        "\"(?<depName>ghcr.io\\/.+?):(?<currentValue>v?.* ?)\""
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
