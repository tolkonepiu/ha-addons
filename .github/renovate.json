{
  "extends": ["config:base"],
  "dependencyDashboard": false,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": false
    }
  ],
  "regexManagers": [
    {
      "description": "Update base image versions",
      "fileMatch": [
        "^(\\w)+\\/config\\.yaml$",
        "^(\\w)+\\/build\\.yaml$"
      ],
      "matchStrings": [
        "\"(?<depName>ghcr.io\\/.+?):(?<currentValue>v?.* ?)\"",
        "version(:\\s|-)(?<currentValue>\\d+\\.\\d+(?:.*)?)"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
