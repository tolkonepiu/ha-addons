{
  "extends": ["config:base"],
  "dependencyDashboard": false,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "description": "Update base image versions",
      "fileMatch": [
        "^(\\w)+\\/build\\.yaml$"
      ],
      "matchStrings": [
        "(?<registryUrl>.+?)\\/(?<depName>.+?):(?<currentValue>v?.* ?)"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
