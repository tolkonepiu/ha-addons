#!/usr/bin/with-contenv bashio
# ==============================================================================
# Start the python executor service
# s6-overlay docs: https://github.com/just-containers/s6-overlay
# ==============================================================================

declare code
declare requirements

code=$(bashio::config 'code')
requirements=$(bashio::config 'requirements')

bashio::log.info "${code}"

PYTHON=$(which python3)

virtualenv -p ${PYTHON} .

source bin/activate

if [ -n "$requirements" ]; then
  bashio::log.info "Install deps: ${requirements}"
  pip install -U ${requirements}
fi

python3 ${code}
